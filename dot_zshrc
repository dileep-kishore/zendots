# HACK: custom transient prompt (since oh-my-posh transient prompt is broken with atuin use this)
autoload -Uz add-zsh-hook
add-zsh-hook precmd transient-prompt-precmd
TRANSIENT_PROMPT='$(oh-my-posh print primary --config ~/.config/ohmyposh/transient.json)'
TRANSIENT_RPROMPT=''
function transient-prompt-precmd {
    # Fix ctrl+c behavior
    TRAPINT() { transient-prompt; return $(( 128 + $1 )) }
    # Save transient prompt
    SAVED_PROMPT=$'\n'"$(eval "printf '%s' \"${TRANSIENT_PROMPT}\"")"
    SAVED_RPROMPT=""
}
autoload -Uz add-zle-hook-widget
add-zle-hook-widget zle-line-finish transient-prompt
function transient-prompt() {
    # Use saved transient prompt
    PROMPT="$SAVED_PROMPT" RPROMPT="$SAVED_RPROMPT" zle .reset-prompt
}

# forced bindings
zvm_after_init_commands+=("bindkey '^r' atuin-search")
# bindkey '^r' atuin-search

# ai chat
_aichat_zsh() {
    if [[ -n "$BUFFER" ]]; then
        local _old=$BUFFER
        BUFFER+="⌛"
        zle -I && zle redisplay
        BUFFER=$(aichat -e "$_old")
        zle end-of-line
    fi
}
zle -N _aichat_zsh
bindkey '\ee' _aichat_zsh

# Export certificates for claude code and other node applications
if [[ $(hostname) == "mac148593" ]]; then
  CERT_FILE="$HOME/corporate-certs.pem"

  if [ ! -f "$CERT_FILE" ]; then
    echo "Creating certificate bundle..."
    security find-certificate -a -p /Library/Keychains/System.keychain > "$CERT_FILE"
  fi

  export NODE_EXTRA_CA_CERTS="$CERT_FILE"
fi
